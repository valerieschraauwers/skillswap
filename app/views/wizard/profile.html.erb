<!-- THIS IS WIZARD PROFILE VIEW AND CONTROLLER -->
<% if current_user.full_profile? %>
  <h2>Edit profile</h2>
  <% else %>
  <h2>Create profile</h2>
  <% end %>

<%= simple_form_for :user, as: :post, url: wizard_update_user_path(current_user) do |f| %>
    <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :date_of_birth, :as => :date,
                  :start_year => Date.today.year - 18,
                  :end_year => Date.today.year - 99,
                  :month => Date.today.month,
                  :order => [:day, :month, :year],
                  :label => "Date of Birth",
                  :prompt => "Select" %>
      <%= f.input :nationality, :as => :country, label: "Country", prompt: "Please select your country" %>
      <%= f.input :city %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.input :bio %>

  <%= f.submit %>
<% end %>
