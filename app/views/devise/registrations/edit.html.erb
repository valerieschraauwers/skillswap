

<div class="form-container">

  <% if current_user.full_profile? %>
  <h2>Edit profile</h2>
  <% else %>
  <h2>Create profile</h2>
  <% end %>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="row">
   <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :date_of_birth, :as => :date,
      :start_year => Date.today.year - 18,
      :end_year => Date.today.year - 99,
      :month => Date.today.month,
      :order => [:day, :month, :year],
      :label => "Date of Birth",
      :prompt => "Select" %>
      <%#= f.input :country %>
      <%= f.country_select :nationality, label: "Country"%>
      <%= f.input :city %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%#= f.association :skills, as: :check_boxes %>
      <%= f.input :bio %>

    </div>

    <div class="form-actions">
      <% if current_user.full_profile? %>
      <%= f.button :submit, "Update" %>
      <% else %>
      <%= f.button :submit, "Get me matched!" %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
</div>

<% if current_user.full_profile? %>
<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
<% end %>
<%= link_to "Back", :back, class: "btn btn-xs btn-green" %>
