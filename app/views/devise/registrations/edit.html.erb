
<div class="wrapper">



<div class="formulario">
  <% if current_user.full_profile? %>
  <h2>Edit profile</h2>
  <% else %>
  <h3>Create profile</h3>
  <% end %>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
    <div class="form-inputs">
      <%#= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <div class="row">
        <div class="col-xs-6">
          <%= f.input :first_name, input_html: { class: 'textinput' }   %>
        </div>
        <div class="col-xs-6">
          <%= f.input :last_name, input_html: { class: 'textinput' } %>
        </div>
      </div>

      <%#= f.input :date_of_birth, :as => :date, input_html: { class: 'datepicker' },
      :start_year => Date.today.year - 18,
      :end_year => Date.today.year - 99,
      :month => Date.today.month,
      :order => [:day, :month, :year],
      :label => "Date of Birth",
      :prompt => "Select" %>
        <%= f.input :date_of_birth, as: :string, input_html: { class: 'datepicker textinput' }  %>
      <div class="row">
        <div class="col-xs-6">
          <%= f.input :nationality, :as => :country, label: "Country", prompt: "Please select your country", input_html: { class: 'textcountry' } %>
        </div>
        <div class="col-xs-6">
          <%= f.input :city, input_html: { class: 'textinput' } %>
        </div>
      </div>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.input :bio, input_html: { class: 'textinput' } %>

    </div>

    <div class="form-actions">
      <% if current_user.full_profile? %>

      <%= f.button :submit, "Update profile", class: "btn btn-sm btn-green buttonedit" %>
      <%= link_to "Back", :back, class: "btn btn-sm btn-green" %>
      <% else %>
      <%= f.button :submit, "Create account",class: "btn btn-sm btn-green buttonedit" %>
      <%= link_to "Back", :back, class: "btn btn-sm btn-green" %>
      <% end %>
    </div>
    <% end %>

</div>
<div class="image" style="background-image: url('<%= image_path 'paint.jpg'%>');">
        </div>

</div>

