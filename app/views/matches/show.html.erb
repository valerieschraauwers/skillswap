<div class="flexed-items">
  <%= render 'dashboard/sidebar' %>

  <div class="main">

    <div class= "whitecard">

      <h4>Skill to share:</h4>
      <%= @match.skill.name %>

      <h4>Teacher:</h4>
      <%= @match.teacher.email %>

      <h4>Student:</h4>
      <%= @match.student.email %>

      <h4>Contact:</h4>
      <div class="item">
        <%= link_to 'Open Chat!', conversations_path(sender_id: @match.teacher.id, recipient_id: @match.student.id), method: 'post'%>
      </div>
    </div>


    <div class= "whitecard">
      <h4>Provide Feedback:</h4>
      <h6> Please rate the overall quality of your experience: </h6>

      <row>
        <span class="rating">
          <input type="radio" class="rating-input"
          id="rating-input-1-5" name="rating-input-1">
          <label for="rating-input-1-5" class="rating-star"></label>
          <input type="radio" class="rating-input"
          id="rating-input-1-4" name="rating-input-1">
          <label for="rating-input-1-4" class="rating-star"></label>
          <input type="radio" class="rating-input"
          id="rating-input-1-3" name="rating-input-1">
          <label for="rating-input-1-3" class="rating-star"></label>
          <input type="radio" class="rating-input"
          id="rating-input-1-2" name="rating-input-1">
          <label for="rating-input-1-2" class="rating-star"></label>
          <input type="radio" class="rating-input"
          id="rating-input-1-1" name="rating-input-1">
          <label for="rating-input-1-1" class="rating-star"></label>
        </span>
      </row>

      <div id="reviews">
        <% if @match.reviews.blank? %>
        Be the first to leave a review:
        <% else %>
        <% @match.reviews.each do |review| %>
        <%= render 'reviews/show', review: review %>
        <% end %>
        <% end %>
      </div>
      <%= render 'reviews/form', match: @match, review: @review %>
    </div>
  </div>
</div>
<%= link_to "Back", :back, class: "btn btn-xs btn-green" %>

