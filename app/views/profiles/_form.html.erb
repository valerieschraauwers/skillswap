<div class="container">
 <div class="row">
   <div class="col-xs-12 col-sm-6 col-sm-offset-3">
    <div class="edit-profile">
      <h1>Create my profile</h1>
      <%= simple_form_for @user, url: 'registrations/edit'  do |f| %>
      <div class="row">
        <div class="col-xs-6">
        <%= f.input :first_name %>
        </div>
        <div class="col-xs-6">
        <%= f.input :last_name %>
        </div>
        <%= f.input :date_of_birth, :as => :date,
                    :start_year => Date.today.year - 18,
                    :end_year => Date.today.year - 99,
                    :month => Date.today.month,
                    :order => [:day, :month, :year],
                    :label => "Date of Birth",
                    :prompt => "Select" %>
          <%= f.input :nationality %>
          <%= f.input :city %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.input :bio %>
      </div>
      </div>
    </div>
      <% end %>
   </div>
 </div>
</div>



