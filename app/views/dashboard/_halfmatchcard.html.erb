
<li class="glide__slide">
  <% match.teacher.id == current_user.id ? card_user = match.student : card_user = match.teacher %>
  <div class="half-match-card half">
    <div>
      <% if current_user == match.teacher %>
      <h3>TEACHER MATCH</h3>
      <% else %>
      <h3>STUDENT MATCH</h3>
      <% end %>
      <hr/>
      <div class="flex-profiles">
        <div class="profile match">
          <table class="table table-user-information half">
            <tbody>
              <tr>
                <td>Name</td>
                <td><%= card_user.first_name %>
                </td>
              </tr>
              <tr>
                <td>City</td>
                <td><%= card_user.city.capitalize %>, <%= card_user.nationality %></td>
              </tr>
              <tr>
                <td>Biography:</td>
                <td><%= card_user.bio %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="match-button">
          <%= link_to "OPEN MATCH", matches_path, class: "btn btn-xs btn-green btn-match text-vertical-center" %>
        </div>
      </div>
      <div class="exchange">
        <% if current_user == match.teacher %>
        <div class="match-icon">
          <p> <%= match.teacher_skill.skill.name %> <%= image_tag "arrowsright.png", height: 70%><%= cl_image_tag match.student.photo, id: "avatar" %></p>
        </div>
        <% else %>
        <div class="match-icon">
          <p> <%= match.student_skill.skill.name %><%= image_tag "arrowsleft.png", height: 70 %><%= cl_image_tag card_user.photo, id: "avatar" %></p>
        </div>
        <% end %>
        <div>
          <% if current_user == match.teacher %>
          <div id="other-skills" class="text-left">
            <h4>OTHER SKILLS <%= card_user.first_name.upcase %> HAS TO OFFER</h4>
            <% card_user.owned_skills.each do |skill|%>
            <li><%= skill.name %></li>
            <% end %>
          </div>
          <% else %>
          <div id="reviews" class="text-left">
            <h4>WHAT OTHERS HAVE SAID ABOUT <%= card_user.first_name.upcase %></h4>
            <p>*****</p>
            <p>Great class!</p>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </li>




