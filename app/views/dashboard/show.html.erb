
<div class="flexed-items">
  <%= render 'sidebar' %>

<div class="main">
  <div class="container">
    <% if current_user.matches_with_type.any? %>
    <div class="row">
      <div class="col-xs-12">
        <h1 class="text-center">Match Overview</h1>
      </div>
    </div>
      <div class="row">
        <div class="col-xs-4">
         <div class="count-full-match">
          <div class="count-title"><h3>FULL MATCHES</h3><hr/></div>
          <div class="count"><h3><%= current_user.matches_with_type.count %></h3></div>
          </div>
        </div>
         <div class="col-xs-4">
          <div class="count-half-match">
            <div class="count-title"><h3>STUDENT MATCHES</h3><hr/></div>
          </div>
        </div>
         <div class="col-xs-4">
          <div class="count-half-match">
            <div class="count-title"><h3>TEACHER MATCHES</h3><hr/></div>
          </div>
        </div>
      </div>
      <%= link_to "My Matches", dashboard_my_matches_path, class: "btn btn-xs btn-green"%>
      <% else %>
      <div class="row">
      <div class="col-xs-12">
        <h1 class="text-center">You do not have matches yet</h1>
        <%= link_to "Get Matched", search_and_create_matches_matches_path, method: :post %>
      </div>
    </div>
    <% end %>
  </div>


<%= link_to "Back", :back, class: "btn btn-xs btn-green back" %>
</div>
</div>















