<div class="flexed-items">
  <%= render 'dashboard/sidebar' %>
  <div class="container">
    <div class="main">
      <h1> All Reviews </h1>

      <% @reviews.each do |review| %>

      <div class= "all_reviews_whitecard">
        <div class = "all_reviews_column_left">
          <img class="review_avatar" img-src >
          <p><%= review.first_name %></p>
          <p><%= review.created_at %></p>
        </div>
        <div class="all_reviews_column_right">
          <p><%= review.rating %> stars</p>
          <p><%= review.content %></p>
        </div>
      </div>

      <% end %>

    </div>
    <%= link_to "Back", :back, class: "btn btn-xs btn-green" %>
  </div>
</div>
</div>
</div>






